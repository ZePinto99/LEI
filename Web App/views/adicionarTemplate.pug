extends layout

block content
  a(href = '/homepage')
    img( src="/images/ScoreImageHandler.png" style="margin-left:170px;margin-top:15px;position:fixed;z-index: 50;width:5%;height:10%")
  script(type='text/javascript' src='/javascripts/functions.js' defer='')
  script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js' defer='')  
  div.w3-bar.w3-bar-lock.w3-center(style='z-index:1;background-color:#d6001c;overflow: hidden;height:80px')
    div.w3-right(style='margin-right:150px;margin-top:20px')
      a.w3-btn.w3-black.w3-round-xlarge.w3-bar-item(href='/users/logout/' ) Logout   
  div(style="padding-top:30px;margin-left: 27%;margin-right: auto;")
      h3 Adicionar Template
      textarea(id='text' rows='13' cols='50' style="width:60%" )
      .w3-row(style="width:60%;padding:25px")
        .w3-col.s4.w3-center
          button.w3-btn.w3-ripple.w3-red(type='submit' onclick="submitTemplate()") Submeter
        .w3-col.s4.w3-center
          select#tags(name='tags')
            option(value='NOME_JOG') Nome do Jogador
            option(value='IDADE_JOG') Idade do Jogador
            option(value='POS_JOGO') Posição do Jogador
            option(value='NAC_JOG') Nacionalidade do Jogador
            option(value='NR_GOLOS_JOG_TOTAL') Nome do Jogador
            option(value='NR_JOGOS_JOG_TOTAL') Idade do Jogador
            option(value='CLUBE') Clube
            option(value='COMPETICAO') Competição
            option(value='TREINADOR') Treinador
            option(value='ARBITRO') Arbitro do jogo
            option(value='JORNADA') Jornada
            option(value='RESULTADO_JOGO') Resultado do jogo(ganhou/perdeu)
            option(value='CASA/FORA') Jogo em casa/fora
            option(value='ADVERSARIO') Adversario do Jogo
            option(value='ESTADIO') Estádio do Jogo
            option(value='LOCALIZACAO') Localização do Jogo
            option(value='MARCADOR_JORNADA') Resultado do Jogo(Marcador)
            option(value='ESTREIA_JOG') Estreia do Jogador
            option(value='RESULTADO_ESTREIA') Resultado(Marcador) da Estreia do Jogador
            option(value='NR_GOLOS_JOG_JR') Número de Golos do Jogador por Jornada
            option(value='NR_JOGOS_SGOLOS_JOG') Número de Jogos sem Sofrer Golos (Guarda-Redes)
            option(value='NR_JOGOS_JOG_EPOCA') Número de Jogos Época Jogador
            option(value='NR_GOLOS_JOG_EPOCA') Número de Golos Época Jogador
            option(value='NR_JOGOS_JOG_EPOCA_ANT') Número de Jogos Época Anterior Jogador
            option(value='NR_GOLOS_JOG_EPOCA_ANT') Número de Golos Época Anterior Jogador
        .w3-col.s4.w3-center
          button.w3-btn.w3-ripple.w3-green(onclick="addTag()") Adicionar 