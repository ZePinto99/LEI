extends layout

block content
  a(href = '/homepage')
    img( src="/images/ScoreImageHandler.png" style="margin-left:170px;margin-top:15px;position:fixed;z-index: 50;width:5%;height:10%")
  script(type='text/javascript' src='/javascripts/functions.js' defer='')
  script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js' defer='')  
  div.w3-bar.w3-bar-lock.w3-center(style='z-index:1;background-color:#d6001c;overflow: hidden;height:80px')
    div.w3-right(style='margin-right:150px;margin-top:20px')
      a.w3-btn.w3-black.w3-round-xlarge.w3-bar-item(href='http://localhost:3000/users/logout/' ) Logout   
  div(style="padding-top:30px;margin-left: 27%;margin-right: auto;")
      textarea(id='text' rows='13' cols='50' style="width:60%" )
      .w3-row(style="width:60%;padding:25px")
        .w3-col.s4.w3-center
          button.w3-btn.w3-ripple.w3-red(type='submit' onclick="submitTemplate()") Submeter
        .w3-col.s4.w3-center
          select#tags(name='tags')
            option(value='NOME_JOG') Nome do Jogador
            option(value='IDADE_JOG') Idade do Jogador
            option(value='POS_JOGO') Posição do Jogador
            option(value='NAC_JOG') Nacionalidade do Jogador
            option(value='NR_GOLOS_JOG_TOTAL') Nome do Jogador
            option(value='NR_JOGOS_JOG_TOTAL') Idade do Jogador
            option(value='CLUBE') Posição do Jogador
            option(value='COMPETICAO') Nacionalidade do Jogador
            option(value='TREINADOR') Nome do Jogador
            option(value='ARBITRO') Idade do Jogador
            option(value='JORNADA') Posição do Jogador
            option(value='RESULTADO_JOGO') Nacionalidade do Jogador
            option(value='CASA/FORA') Nome do Jogador
            option(value='ADVERSARIO') Idade do Jogador
            option(value='ESTADIO') Posição do Jogador
            option(value='LOCALIZACAO') Nacionalidade do Jogador
            option(value='MARCADOR_JORNADA') Nome do Jogador
            option(value='ESTREIA_JOG') Idade do Jogador
            option(value='RESULTADO_ESTREIA') Posição do Jogador
            option(value='NR_GOLOS_JOG_JR') Nacionalidade do Jogador
            option(value='NR_JOGOS_SGOLOS_JOG') Nome do Jogador
            option(value='NOME_TOP') Idade do Jogador
            option(value='NR_JOGOS_TOP') Posição do Jogador
            option(value='NR_GOLOS_TOP') Nacionalidade do Jogador
            option(value='NR_JOGOS_JOG_EPOCA') Nome do Jogador
            option(value='NR_GOLOS_JOG_EPOCA') Idade do Jogador
            option(value='NR_JOGOS_JOG_EPOCA_ANT') Nome do Jogador
            option(value='NR_GOLOS_JOG_EPOCA_ANT') Idade do Jogador
        .w3-col.s4.w3-center
          button.w3-btn.w3-ripple.w3-green(onclick="addTag()") Adicionar 
  footer.footer
    address.w3-text-white SC Braga - UMinho - Projeto 58 - LEI