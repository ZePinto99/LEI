extends layout

block content
  img(src="/images/ScoreImageHandler.png" style="margin-left:170px;margin-top:15px;position:fixed;z-index: 50;width:5%;height:10%")
  div.w3-bar.w3-bar-lock.w3-center(style='z-index:1;background-color:#d6001c;overflow: hidden;height:80px')
    div.w3-right(style='margin-right:150px;margin-top:20px')
      a.w3-btn.w3-round-xlarge.w3-bar-item(href='/adicionarTemplate') Adicionar Template  
      a.w3-btn.w3-black.w3-round-xlarge.w3-bar-item(href='/users/logout/') Logout   
  div
        .newspaper-layout1.small-10.small-offset-1.nopadding
          section.newspaper-layout1-grid-news.columns.small-12.nopadding
            .newspaper-layout1-grid-news__title.columns.small-12.nopadding
              .title-layout2.columns.small-12.nopadding
                .title-layout2__wrapper
                  .text Not&iacute;cias
            .newspaper-layout1-grid-news__grid.columns.small-12.nopadding
              #news-grid.grid-layout4.columns.small-12.nopadding(data-action='async_get_general_news' data-async='{"per_page":12,"paged":1,"total":"2304","category":null}' data-load='A carregar' data-load-fail='Erro ao carregar')
                .grid-layout4__wrapper.columns.small-12.nopadding
                  ul.columns.small-12.nopadding
                    for n in noticias
                      li.columns.small-12.medium-6.large-4.end
                        .single-item-layout1
                          .single-item-layout1__wrapper
                            a(href='/noticiaGerada/'+n.id_noticia title=n.titulo)
                              .item
                                .image
                                  img(src='images/sc-braga.png')
                                .info
                                  .info__date-category
                                    .date=n.data
                                    .category SC Braga
                                  .info__title.ellipsis-dots(style='overflow-wrap: break-word;')=n.titulo
                                  .info__excerpt.ellipsis-dots.ddd-truncated(style='overflow-wrap: break-word;')= n.noticia
                  .load-more-items.columns.small-10.small-centered.medium-5.large-3
                  .no-content.columns.small-12
                    .message-layout1.columns.small-12.nopadding
                      .message-layout1__wrapper
                        .content-wrapper
                          .content Conte&uacute;do n&atilde;o dispon&iacute;vel
              .grid-layout4-loading
                .loading-layout1
                  .loading-ellipsis